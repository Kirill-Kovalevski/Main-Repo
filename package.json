{
  "name": "calendar",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "sass css/main.scss css/dist/main.css --style=compressed",
    "watch:css": "sass --watch css/main.scss:css/dist/main.css",
    "build:js": "babel app.js --out-file dist/app.js && babel auth.js --out-file dist/auth.js && babel auth-guard.js --out-file dist/auth-guard.js",
    "watch:js": "babel . --out-dir dist --watch --ignore css,icons,node_modules,dist",
    "build": "npm run build:css && npm run build:js",
    "watch": "npm-run-all --parallel watch:css watch:js"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.71.0"
  },
  "babel": {
    "presets": ["@babel/preset-env"],
    "plugins": ["@babel/plugin-proposal-optional-chaining"]
  }
}
